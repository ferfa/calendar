<Window x:Class="calendar.Windows.NewTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:calendar"
        xmlns:uc="clr-namespace:calendar.UserControls"
        mc:Ignorable="d"
        Title="Přidat novou událost..." SizeToContent="WidthAndHeight">
    <StackPanel>
        <uc:TaskDetails x:Name="TaskDetailsUC">
        </uc:TaskDetails>
        <WrapPanel>
            <Button Name="OkButton" Content="Ok" Width="50" Margin="2, 10" IsDefault="True" Click="OkButton_Click"></Button>
            <Button Name="CancelButton" Content="Storno" Width="50" Margin="2 ,10" Click="CancelButton_Click"></Button>
        </WrapPanel>
    </StackPanel>
</Window>
