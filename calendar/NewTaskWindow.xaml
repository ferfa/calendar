<Window x:Class="calendar.NewTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:calendar"
        mc:Ignorable="d"
        Title="Přidat novou událost..." SizeToContent="WidthAndHeight">
    <StackPanel Width="500" Margin="30">
        <TextBlock Text="Přidáváte událost dne " FontSize="16"></TextBlock>
        <TextBlock Grid.Column="1" Text="{Binding Path=DayNumber}" FontWeight="Bold" FontSize="16"></TextBlock>
        <TextBlock Text="Název události"></TextBlock>
        <TextBox Name="NewTaskNameTB" Margin="0, 0, 0, 10"></TextBox>
        <TextBlock Text="Popis"></TextBlock>
        <TextBox Name="NewTaskDetailsTB"></TextBox>
        <Button Name="OkButton" Content="Ok" Width="50" Margin="10" IsDefault="True" Click="OkButton_Click"></Button>
    </StackPanel>
</Window>
